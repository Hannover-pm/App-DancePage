<!DOCTYPE HTML>
<html lang="<% $content_language %>">
  <head>
    <base href="<% $request.uri_base %>" target="_top">
    <meta http-equiv="content-type" content="<% $content_type %>; charset=<% $content_charset %>">
    <script type="text/javascript" src="scripts/modernizr.js"></script>
    <meta charset="<% $content_charset %>">
    <title><% if $settings.sitename { $settings.sitename } else { $settings.appname } %><% if $pagecategory { ' '; $pagecategory } %><% if $pagetitle { ': '; $pagetitle } %></title>
|% if $pageabstract {
    <meta name="description" content="<% $pageabstract %>">
|% } if $pagekeywords && $pagekeywords.size() {
    <meta name="keywords" content="<% $pagekeywords.join(',') %>">
|% } if $pageauthor {
    <meta name="author" content="<% $pageauthor %>">
|% }
    <meta name="application-name" content="<% $settings.appname %>">
    <meta name="robots" content="<% if $pagerobots { $pagerobots } else { 'index,follow' } %>">
    <link rel="stylesheet" type="text/css" href="styles/normalize.css">
    <link rel="stylesheet" type="text/css" href="styles/main.css">
  </head>
  <body>
    <script type="text/javascript" src="scripts/jquery.js"></script>
    <!-- <script type="text/javascript" src="scripts/jquery-migrate.js"></script> -->
    <header id="header" role="banner">
      <h1 id="sitename"><a href="<% $request.uri_base %>"><% if $settings.sitename { $settings.sitename } else { $settings.appname } %></a></h1>
      <nav id="topnav">
        <ul class="topnav">
          <li><a href="/">Home</a></li>
          <li><a href="/ueber-uns">Über uns</a></li>
          <li><a href="/blog">Blog</a></li>
          <li><a href="/kontakt">Kontakt</a></li>
|% if $user_has_role('admin') {
          <li><a href="/acp">ACP</a></li>
|% }
|% if $logged_in_user {
          <li><a href="/logout2">Logout</a></li>
|% } else {
          <li><a href="/login2">Login</a></li>
|% }
        </ul>
        <div id="topnav_clearing"></div>
      </nav>
    </header>
    <div id="main">
|% $content | raw
    </div>
    <footer id="footer" role="contentinfo" lang="en">
      <span id="copyright">© <% $now.year %>, <a href="<% $request.uri_base %>/"><% if $settings.sitename { $settings.sitename } else { $settings.appname } %></a>. All rights reserved.</span>
      <span id="poweredby">Powered by <a href="http://www.perl.org/" title="Perl programming language">Perl</a> <a href="http://perldancer.org/" title="Perl Dancer Web Framework">Dancer</a>.</span>
    </footer>
    <script type="text/javascript" defer src="scripts/main.js"></script>
  </body>
</html>
